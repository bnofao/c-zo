{
  "name": "@czo/auth",
  "type": "module",
  "version": "0.0.1",
  "description": "Authentication module for c-zo â€” better-auth with JWT dual-token",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bnofao/czo.git",
    "directory": "packages/modules/auth"
  },
  "exports": {
    ".": {
      "types": "./src/module.ts",
      "default": "./dist/module.mjs"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./dist/types.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "types": "./src/module.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "unbuild && rm -f dist/middleware/*.d.ts",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "graphql:generate": "graphql-codegen --config codegen.ts",
    "migrate:generate": "drizzle-kit generate",
    "migrate:latest": "drizzle-kit migrate",
    "migrate:status": "drizzle-kit check",
    "check-types": "pnpm tsc --noEmit"
  },
  "dependencies": {
    "@czo/kit": "workspace:*",
    "@graphql-tools/utils": "catalog:common",
    "better-auth": "catalog:common",
    "drizzle-orm": "catalog:common",
    "graphql": "catalog:common"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "catalog:testing",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "drizzle-kit": "catalog:dev",
    "graphql-scalars": "catalog:common",
    "nitro": "catalog:dev",
    "vitest": "catalog:testing"
  }
}
