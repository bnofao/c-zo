{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["DATABASE_URL", "REDIS_URL", "RABBITMQ_URL", "NODE_ENV", "OTEL_SERVICE_NAME", "OTEL_EXPORTER_OTLP_ENDPOINT"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["_dev"]
    },
    "_dev": {
      "dependsOn": ["^_dev"]
    }
  }
}
